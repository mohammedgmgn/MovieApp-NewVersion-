<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mahmoud.mohammed.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".mvp.volleysingletone.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.ui.main.view.activities.MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.base.BaseActivity"></activity>
        <activity android:name=".mvp.ui.moviedetail.view.activities.DetailActivity"></activity>
        <activity
            android:name=".mvp.ui.moviedetail.view.activities.ReviewActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Dialog"

            ></activity>
    </application>

</manifest>